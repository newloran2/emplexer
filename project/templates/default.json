{
    "base": {
	      "default_template": "simple_list",
            "view_order":[
                "simple_list"
            ],
        "templates": {
	          "simple_list":{
                "base_view_item_params": {
                    "item_layout": 0,
                    "item_paint_caption": true,
                    "item_paint_icon": false
                },
                "items": {
                    "caption": "plex_item_field_expr::attributes()->titleSort||plex_item_field_expr::attributes()->title||plex_item_field_expr::attributes()->name",
                    "media_url": "plex_image_item_field::key||plex_image_item_field::address",
                    "template": "simple_list", 
		                "view_item_params":[]
                },
                "not_loaded_view_item_params": [],
                "view_params": {
                    "content_box_height": 945,
                    "content_box_width": 1820,
                    "content_box_x": 50,
                    "content_box_y": 30,
                    "num_cols": 1,
                    "num_rows": 20,
                    "paint_content_box_background": true,
                    "paint_details": false,
                    "paint_help_line": true,
                    "paint_path_box": false,
                    "paint_scrollbar": false
                }
            }
	      }
    },
    "show": {
        "inherits": "movie",
        "view_order": ["show_banners","simple_list"],
        "templates": {
            "show_banners": {
                "inherits": "movie_posters",
                "items": {
                    "view_item_params": {
                        "icon_path": "plex_image_item_field::banner"
                    }
                },
                "not_loaded_view_item_params": {
                    "item_paint_caption_within_icon": true,
                    "unset": true
                },
                "view_params": {
                    "content_box_padding_left": 70,
                    "num_cols": 2,
                    "num_rows": 5,
                    "sandwich_height": 150,
                    "sandwich_width": 750
                }
            }
        }
    },
    "episode": {
        "inherits": "movie",
	      "default_template": "episode_thumbs",
            "view_order":[
                "simple_list",
                "episode_thumbs"
            ],
        "templates": {
            "episode_thumbs": {
                "base_view_item_params": {
                    "item_paint_caption": true,
                    "icon_sel_scale_factor": 1.3,
                    "item_caption_font_size": 1
                },
                "inherits": "movie_posters",
                "items": {
                    "view_item_params": {
                        "icon_path": "plex_thumb_item_field::thumb::260::200::true"
                    }
                },
                "not_loaded_view_item_params": {
                    "item_caption_font_size": 1
                },
                "view_params": {
                    "background_height": 1080,
                    "background_order": "before_all",
                    "background_path": "plex_image_field::art",
                    "background_width": 1920,
                    "content_box_padding_left": 50,
                    "num_cols": 5,
                    "num_rows": 4,
                    "optimize_full_screen_background": true,
                    "sandwich_height": 180,
                    "sandwich_width": 290
                }
            }
        }
    },
    "info": {
        "external": {
            "has_multiple_series": false,
            "has_right_button": "plex_field_expr::Video->Extras ? true : false",
            "right_button_action": null,
            "right_button_caption": "plex_field_expr::Video->Extras ? 'Extras' : null",
            "series_media_url": "url"
        },
        "movie": {
            "actors_str": "plex_field_roles_expr::Video->Role",
            "budget": "",
            "country": "plex_field_expr::Video->Country->attributes()->tag1||null",
            "description": "plex_field_expr::Video->attributes()->summary||",
            "details": {
                "     Aspect Ratio": "plex_field_expr::Video->Media->attributes()->aspectRatio||-",
                "     Bitrate": "plex_field_expr::Video->Media->attributes()->bitrate||-",
                "     Codec": "plex_field_expr::Video->Media->attributes()->videoCodec||-",
                "     Container": "plex_field_expr::Video->Media->attributes()->container||-",
                "     Height": "plex_field_expr::Video->Media->attributes()->height||-",
                "     Video": "_",
                "     Video Frame Rate": "plex_field_expr::Video->Media->attributes()->videoFrameRate||-",
                "     Video Resolution": "teste",
                "     Width": "plex_field_expr::Video->Media->attributes()->width||-"
            },
            "directors_str": "plex_field_expr::Video->Director[0]->attributes()->tag / 1000/60 ",
            "genres_str": "plex_field_expr::Video->Genre[0]->attributes()->tag",
            "length_min": "plex_field_expr::Video->attributes()->duration/1000/60",
            "name": "",
            "name_original": "plex_field_expr::Video->attributes()->title",
            "poster_url": "http://192.168.2.8:32400/photo/:/transcode?width=200&height=294&url=http://192.168.2.8:32400/library/metadata/32320/thumb/1406888464",
            "rate_imdb": "plex_field_expr::Video->attributes()->rating||null",
            "rate_kinopoisk": "",
            "rate_mpaa": "plex_field_expr::Video->attributes()->contentRating||null",
            "scenarios_str": "",
            "year": 2012
        },
        "params": {
            "background_url": "http://192.168.2.8:32400/library/metadata/32309/art/1406888453",
            "paint_content_box_background": true,
            "paint_path_box": false
        }
    },
    "movie": {
        "inherits": "base",
	      "default_template": "movie_posters",
        "view_order":[
            "movie_posters_and_details",
            "movie_posters",
            "simple_list"
        ],
        "templates": {
            "movie_posters": {
		            "template_index" : 2,
                "base_view_item_params": {
                    "icon_scale_factor": 1,
                    "icon_sel_scale_factor": 1.15,
                    "icon_valign": 1,
                    "item_layout": 1,
                    "item_padding_bottom": 0,
                    "item_padding_top": 0,
                    "item_paint_caption": false,
                    "item_paint_icon": true
                },
                "inherits": "simple_list",
                "items": {
                    "view_item_params": {
                        "icon_path": "plex_thumb_item_field::thumb::200::250::true"
                    }
                },
                "not_loaded_view_item_params": {
                    "icon_path": "plugin_file://icons/poster.png",
                    "item_paint_caption_within_icon": true
                },
                "view_params": {
                    "content_box_padding_left": 50,
                    "item_paint_caption_within_icon": true,
                    "num_cols": 8,
                    "num_rows": 3,
                    "paint_icon_selection_box": false,
                    "paint_item_info_in_details": false,
                    "paint_sandwich": true,
                    "sandwich_base": "gui_skin://special_icons/sandwich_base.aai",
                    "sandwich_cover": "cut_icon://{name=sandwich_cover}",
                    "sandwich_height": 260,
                    "sandwich_icon_keep_aspect_ratio": true,
                    "sandwich_icon_upscale_enabled": true,
                    "sandwich_mask": "cut_icon://{name=sandwich_mask}",
                    "sandwich_width": 180
                }
            },
            "movie_posters_and_details": {
                "inherits": "movie_posters",
		            "template_index":2,
                "items":{
                    "view_item_params":{
                        "item_detailed_info":  "plex_detailed_info::teste"
                    }
                },
                "base_view_item_params":{
                    "item_caption_font_size": 1,
                    "item_detailed_icon_path": "hdjshjdshjd"
                },
                "view_params": {
                    "num_cols": 5, 
                    "num_rows": 3,
                    "paint_item_info_in_details": true,
                    "item_detailed_info_title_color": 11,
                    "item_detailed_info_text_color": 8,
                    "zoom_detailed_icon": false,
                    "item_detailed_info_auto_line_break": true,
                    "paint_sandwich":  true,
                    "content_box_width": 1300,
                    "paint_details": true,
                    "item_detailed_info_font_size": 1,
                    "cycle_mode_enabled" :  true
                }
            }
        }
    },
    "nfsScreen": {
        "inherits": "base",
        "view_order":[
            "nfsScreen_simple_list"
        ],
        "templates": {
            "nfsScreen_simple_list": {
                "async_icon_loading": false,
                "base_view_item_params": {
                    "num_cols": 1,
                    "num_rows": 20
                },
                "inherits": "simple_list",
                "items": {
                    "caption": "{{key}}",
                    "media_url": "{{value}}"
                },
                "view_params": {
                    "num_cols": 1,
                    "num_rows": 10,
                    "unset": true
                }
            }
        }
    },
    "photo": {
        "inherits": "episode",
        "view_order":["photos_thumbs"],
        "templates": {
            "photos_thumbs": {
                "inherits": "episode_thumbs",
                "view_params": {
                    "sandwich_height": 150,
                    "sandwich_width": 200
                }
            }
        }
    }, 
    "plugins": {
        "inherits": "episode",
	      "default_template": "plugins_thumb",
        "view_order":[
            "plugins_thumb",
            "simple_list"
        ],
        "templates": {
            "plugins_thumb": {
                "async_icon_loading": false,
                "base_view_item_params": {
                    "item_paint_caption": true
                },
                "items": {
                    "media_url": "plex_item_xpath://@key",
                    "view_item_params": {
                        "icon_path": "plex_thumb_item_field::thumb::300::300"
                    }
                },
                "view_params": {
                    "num_rows": 4,
                    "paint_sandwich": false,
                    "sandwich_height": 145,
                    "sandwich_width": 200
                }
            }
        }
    },
    "season": {
        "inherits": "movie",
	      "default_template": "season_posters",
        "view_order":[
            "season_posters",
            "simple_list"
        ],
        "templates": {
            "season_posters": {
                "inherits": "movie_posters",
                "items": {
                    "view_item_params": {
                        "icon_path": "plex_thumb_item_field::thumb::200::300::true||plex_thumb_field::thumb::200::300",
                        "unset": true
                    }
                },
                "view_params": {
                    "background_height": 1080,
                    "background_order": "before_all",
                    "background_path": "plex_image_field::art",
                    "background_width": 1920,
                    "optimize_full_screen_background": true,
                    "paint_content_box_background": false
                }
            }
        }
    },
    "secondary": {
        "inherits": "base",
        "view_order": ["simple_list"]
    },
    "servers": {
        "inherits": "base",
	      "default_template": "servers_simple_list",
        "view_order":["servers_simple_list"],
        "templates": {
            "servers_simple_list": {
                "items": {
                    "caption": "plex_item_xpath::string(@name)",
                    "media_url": "plex_item_xpath::concat(@scheme, '://',@host, ':',@port, '/library/sections?X-Plex-Token=', @accessToken)",
                    "view_item_params": null
                }
            }
        }
    }
}
